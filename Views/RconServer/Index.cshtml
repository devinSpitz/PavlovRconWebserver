@model System.Collections.Generic.IEnumerable<PavlovRconWebserver.Models.RconServer>

@{
    ViewBag.Title = "Rcon Servers";
    Layout = "_Layout";
}


<h2>Rcon servers:</h2>
<a asp-area="" asp-controller="RconServer" asp-action="EditServer">&#10133; Add Server</a>
<table class="table table-striped table-responsive">
    <thead>
    <th>
        Id    
    </th>        
    <th>
         Edit      
    </th>
    <th>
        Name    
    </th>
    <th>
        Adress    
    </th>
    <th>
        Pavlov Server
    </th>
    </thead>
    <tbody>
    @foreach (var rconServer in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("DeleteServer", new {rconServer.Id})"><span>&#10060;</span></a>
                @rconServer.Id
            </td>
            <td>
                <a href="@Url.Action("EditServer", "rconServer", new {serverId = rconServer.Id})"><span>Server &#8505;</span></a> or
                <a href="@Url.Action("EditServerSelectedMaps", "rconServer", new {serverId = rconServer.Id})"><span>Maps &#128506;</span></a>
            </td>
            <td>
                @rconServer.Name
            </td>
            <td>
                @rconServer.Adress
            </td>
            
            <td>
                <ul>
                    <li><a href="@Url.Action("EditServer", "PavlovServer", new {serverId = 0,rconServerId = rconServer.Id})"><span>&#10133;</span></a></li>
                    @foreach (var pavlovServer in rconServer.PavlovServers)
                    {
                        <li>
                            <a href="@Url.Action("DeleteServer","PavlovServer", new {pavlovServer.Id})"><span>&#10060;</span></a>@pavlovServer.Name<a href="@Url.Action("EditServer", "PavlovServer", new {serverId = pavlovServer.Id, rconServerId = rconServer.Id})"><span>&#8505;</span></a></li>
                    }
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table>