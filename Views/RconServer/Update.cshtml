@model RconServer

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<form asp-controller="RconServer" asp-action="UpdateServer"  method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" class="form-control" value="@Model.Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" value="@Model.Adress"/>
        <span asp-validation-for="Adress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Port"></label>
        <input asp-for="Port" class="form-control" value="@Model.Port"/>
        <span asp-validation-for="Port" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" value="@Model.Password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>
