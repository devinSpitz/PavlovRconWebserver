@model List<SteamIdentity>

@{
    ViewBag.Title = "Steam Identities";
    Layout = "_Layout";
}


<h2>@ViewBag.Title</h2>
<a asp-area="" asp-controller="Team" asp-action="EditSteamIdentity">&#10133; Add Steam Identity</a>
<table class="table table-striped table-responsive">
    <thead>
                            <th class="col-3">Steam id:</th>
                            <th class="col-3">Steam name:</th>
                            <th class="col-3">PRW Name</th>
    </thead>
    <tbody>
    @foreach (var steamIdentity in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("DeleteSteamIdentity", new {steamIdentity.Id})" onclick="return confirm('Are you sure you want to Delete?')"><span>&#10060;</span></a>
                @steamIdentity.Id
                <a href="@Url.Action("EditSteamIdentity", "Team", new {steamIdentityId = steamIdentity.Id})"><span> &#9998;</span></a>
            </td>
            <td>
                   @steamIdentity.Name
            </td>
            <td>
                @steamIdentity.LiteDbUser?.NormalizedUserName
            </td>
        </tr>
    }
    </tbody>
</table>