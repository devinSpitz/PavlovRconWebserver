
@model Team

@{
    ViewBag.Title = "Add/Update Team";
    Layout = "_Layout";

}

<h2>@ViewBag.Title</h2>

<form asp-controller="Team" asp-action="SaveTeam" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-md-11">
        <div class="panel panel-default">
            <div class="panel-heading">Main team settings</div>
            <div class="panel-body">
                
                <input asp-for="Id" class="form-control" value="@Model.Id" type="hidden"/>
                <span asp-validation-for="Id" class="text-danger"></span>  
                <div class="form-group col-md-12">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


            </div>
        </div>
        <div class="saveButton col-md-1">
            <button type="submit" class="btn btn-primary btn-default col-md-12">Save</button>
        </div>
</div>

</form>