@model List<Team>

@{
    ViewBag.Title = "Teams";
    Layout = "_Layout";
}


<h2>@ViewBag.Title<a class="btn btn-sm btn-primary m-2" asp-area="" asp-controller="Team" asp-action="EditTeam"><span class="fas fa-plus"></span></a></h2>


<table class="table table-striped table-responsive">
    <thead>
    <th>
        Id    
    </th>        
    <th>
         Edit      
    </th>
    <th>
        Name    
    </th>
    </thead>
    <tbody>
    @foreach (var team in Model)
    {
        <tr>
            <td>
                <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteTeam", new {team.Id})" onclick="return confirm('Are you sure you want to Delete?')"><span class="fas fa-trash-alt"></span></a>
                @team.Id
            </td>
            <td>
                <a class="btn btn-sm btn-primary" href="@Url.Action("EditTeam", "Team", new {teamId = team.Id})">Team <span class="fas fa-edit"> </span></a> 
                <a class="btn btn-sm btn-primary" href="@Url.Action("EditTeamSelectedSteamIdentities", "Team", new {teamId = team.Id})">Members <span class="fas fa-user-cog"></span></a> 
                
            </td>
            <td>
                @team.Name
            </td>
        </tr>
    }
    </tbody>
</table>