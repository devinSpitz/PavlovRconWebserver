@model List<Team>

@{
    ViewBag.Title = "Teams";
    Layout = "_Layout";
}


<h2>Teams servers:</h2>
<a asp-area="" asp-controller="Team" asp-action="EditTeam">&#10133; Add Team</a>
<table class="table table-striped table-responsive">
    <thead>
    <th>
        Id    
    </th>        
    <th>
         Edit      
    </th>
    <th>
        Name    
    </th>
    </thead>
    <tbody>
    @foreach (var team in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("DeleteTeam", new {team.Id})"><span>&#10060;</span></a>
                @team.Id
            </td>
            <td>
                <a href="@Url.Action("EditTeam", "Team", new {teamId = team.Id})"><span> Team &#8505;</span></a> 
                <a href="@Url.Action("EditTeamSelectedSteamIdentities", "Team", new {teamId = team.Id})"><span> Members &#128100;</span></a> 
                
            </td>
            <td>
                @team.Name
            </td>
        </tr>
    }
    </tbody>
</table>