@model ServerInfoViewModel
<style>
    .pavlovServerInfoStyle{
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        }
</style>
<div class="card m-1  pavlovServerInfoStyle">
        <div class="card-header">
            <b>@Model.ServerInfo.ServerName</b>
        </div>
    <div class="card-body">
        <img  src="@Model.ServerInfo.MapPictureLink" height="150px" width="150px"/>
        <li>Round state: @Model.ServerInfo.RoundState</li>
        <li>Game mode: @Model.ServerInfo.GameMode</li>
        <li>Player count: @Model.ServerInfo.PlayerCount</li>
        <li>Map id: @Model.ServerInfo.MapLabel</li>
        <li>Teams: @Model.ServerInfo.Teams</li>
        
        <div class="form-group col-md-3">
            <label asp-for="ServerInfo.Team0Score"></label>
            <input asp-for="ServerInfo.Team0Score" class="form-control" value="@Model.ServerInfo.Team0Score"/>
            <span asp-validation-for="ServerInfo.Team0Score" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="ServerInfo.Team1Score"></label>
            <input asp-for="ServerInfo.Team1Score" class="form-control" value="@Model.ServerInfo.Team1Score"/>
            <span asp-validation-for="ServerInfo.Team1Score" class="text-danger"></span>
        </div>
    </div>
</div>