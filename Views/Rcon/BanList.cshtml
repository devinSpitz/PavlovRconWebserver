@model List<ServerBans>


@{
    var tableHeaer = "<thead><tr><th>Id</th><th>SteamUser</th><th>SteamId</th><th>Comment</th><th>Banned date</th><th>Ban span</th></thead>";
}

<!-- Modal -->
<div class="modal fade" id="add-contact" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addContactLabel">Banned peoples:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="panel panel-default">
                    <div class="panel-heading">Banned Players</div>
                    <div class="panel-body">
                        <table class="table table-bordered table-responsive col-xs-12">
                            @Html.Raw(tableHeaer)
                            @foreach (var player in Model)
                            {
                                @await Html.PartialAsync("BanSingle", player)
                            }
                        </table>
                    </div>
                </div>
                
                <br>
                <div class="panel panel-default">
                    <div class="panel-heading">Unban SteamId</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-6">
                                <input name="UnbanSteamId" id="UnbanSteamId" class="form-control" placeholder="76561197960287930">
                            </div>
                            <div class="col-xs-3">
                            </div>
                            <div class="col-xs-3">
                                <Button alt="Remove ban" class="btn-success" onclick="RemoveBannedPlayer($('#UnbanSteamId').val())">Unban</Button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>