@using Microsoft.AspNetCore.Identity
@using LiteDB.Identity.Models
@inject SignInManager<LiteDbUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills nav-stacked">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)">
        <a asp-action="Index">Profile</a>
    </li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)">
        <a asp-action="ChangePassword">Password</a>
    </li>
    <li class="@ManageNavPages.SteamIdentityNavClass(ViewContext)">
        <a asp-controller="Team" asp-action="EditOwnSteamIdentity">EditSteamIdentity</a>
    </li> 
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)">
            <a asp-action="ExternalLogins">External logins</a>
        </li>
    }
    @* <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"> *@
    @*     <a asp-action="TwoFactorAuthentication">Two-factor authentication</a> *@
    @* </li> *@
</ul>

